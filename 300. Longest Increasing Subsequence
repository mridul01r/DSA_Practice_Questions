300. Longest Increasing Subsequence
Link - https://leetcode.com/problems/longest-increasing-subsequence/description/
Difficulty - Medium

Solution 1 - Recursive Approach - O(2 ^ n) --> TLE
class Solution {
    public int lengthOfLIS(int[] nums) {
        return helper(nums, 0, -1);
    }
    
    private int helper(int[] nums, int i, int prevIndex) {
        if (i == nums.length) return 0;
        
        int notPick = helper(nums, i + 1, prevIndex);
        int pick = 0;
        if (prevIndex == -1 || nums[i] > nums[prevIndex]) {
            pick = 1 + helper(nums, i + 1, i);
        }
        
        return Math.max(notPick, pick);
    }
}



Solution 2 - Memoization - O(n ^ 2)
class Solution {
    public int lengthOfLIS(int[] nums) {
        int n = nums.length;
        int[][] dp = new int[n][n + 1];
        for (int[] row : dp) Arrays.fill(row, -1);
        return helper(dp, nums, 0, -1);
    }
    
    private int helper(int[][] dp, int[] nums, int i, int prevIndex) {
        if (i == nums.length) return 0;
        if (dp[i][prevIndex + 1] != -1) return dp[i][prevIndex + 1];
        
        int notPick = helper(dp, nums, i + 1, prevIndex);
        int pick = 0;
        if (prevIndex == -1 || nums[i] > nums[prevIndex]) {
            pick = 1 + helper(dp, nums, i + 1, i);
        }
        
        return dp[i][prevIndex + 1] = Math.max(notPick, pick);
    }
}



Solution 3 - DP - O(n ^ 2)
class Solution {
    public int lengthOfLIS(int[] nums) {
        int n = nums.length;
        int[] dp = new int[n];
        Arrays.fill(dp, 1);
        int maxLength = 1;
        
        for (int i = 1; i < n; i++) {
            for (int j = 0; j < i; j++) {
                if (nums[i] > nums[j]) {
                    dp[i] = Math.max(dp[i], dp[j] + 1);
                }
            }
            maxLength = Math.max(maxLength, dp[i]);
        }
        
        return maxLength;
    }
}
