188. Best Time to Buy and Sell Stock IV
Link - https://leetcode.com/problems/best-time-to-buy-and-sell-stock-iv/description/
Difficulty - Hard

Solution - Recursive Approach -> O(2^n) --> TLE
class Solution {
    public int helper(int[] prices, int n, int k, int i, int buyed){
        if(i == n) return 0;
        if(k == 0) return 0;

        if(buyed==1){
            return Math.max(-prices[i] + helper(dprices, n, k, i + 1, 0), helper(prices, n, k, i + 1, 1));
        }else{
            return Math.max(prices[i] + helper(prices, n, k - 1, i + 1, 1), helper(prices, n, k, i + 1, 0));
        }
    }
    public int maxProfit(int k, int[] prices) {
        int n = prices.length;
        return helper(prices, n, k, 0, 1);
    }
}

Solution 2 - Memoization - O(n*k*2)
class Solution {
    int[][][] dp;
    int profit = 0;
    public int helper(int[][][] dp, int[] prices, int n, int k, int i, int buyed){
        if(i == n) return 0;
        if(k == 0) return 0;

        if(dp[i][buyed][k] != -1) return dp[i][buyed][k];
        if(buyed==1){
            profit = Math.max(-prices[i] + helper(dp, prices, n, k, i + 1, 0), helper(dp, prices, n, k, i + 1, 1));
        }else{
            profit = Math.max(prices[i] + helper(dp, prices, n, k - 1, i + 1, 1), helper(dp, prices, n, k, i + 1, 0));
        }

        return dp[i][buyed][k] = profit;
    }
    public int maxProfit(int k, int[] prices) {
        int n = prices.length;
        dp = new int[n][2][k + 1];
        for(int[][] row : dp){
            for(int[] col : row){
                Arrays.fill(col, - 1);
            }
        }
        return helper(dp, prices, n, k, 0, 1);
    }
}

Solution 3 - DP
class Solution {
    public int maxProfit(int k, int[] prices) {

        int n = prices.length;
        int[] profits = new int[n];
        for (int i = 1; i <= k ; i++) {
            int max = Integer.MIN_VALUE;
            int profit = 0;
            for( int j = n-1; j >= 0; j--) {
                max = Math.max(max, profits[j]+prices[j]);
                profit = Math.max(profit, max-prices[j]);
                profits[j] = profit;
            }
        }
        return profits[0];
    }
}
